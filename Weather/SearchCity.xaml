            <SearchBar x:Name="searchBar" Placeholder="Search for a city"
                TextChanged="OnSearchBarButtonPressed" />

             <ListView x:Name="searchResults" Footer="" ItemTapped="searchResults_ItemSelected">
                 <ListView.ItemTemplate>
                    <DataTemplate>
